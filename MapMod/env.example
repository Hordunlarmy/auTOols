# Google Maps Edit Bot Configuration
# Copy this file to .env and set your preferred defaults

# Required: Location to search for
GMAPS_SEARCH=AIQ

# Optional: New name for the location
GMAPS_NAME=AIQ limited

# Optional: New address for the location  
GMAPS_ADDRESS=

# Optional: Run browser in headless mode (true/false)
GMAPS_HEADLESS=false

# Optional: Wait time in seconds (default: 5)
GMAPS_WAIT=5

# Optional: Time to wait for sign-in in seconds (default: 0, disabled)
GMAPS_SIGNIN_WAIT=180

# Optional: Start a new session (clears saved sign-in) (true/false)
GMAPS_NEW_SESSION=false

# Optional: Automatically find and click elements (true/false)
GMAPS_AUTO_CLICK=false

# Optional: Log details of manual clicks (true/false)
GMAPS_LOG_CLICKS=false

# Optional: Delay between clicks in seconds (default: 2)
GMAPS_CLICK_DELAY=2
